    li(mac-scroll-spy-target="uncapitalize"): a(href="#uncapitalize")
      i.icon-chevron-right
      | Uncapitalize
    li(mac-scroll-spy-target="toCamelCase"): a(href="#toCamelCase")
      i.icon-chevron-right
      | toCamelCase
    li(mac-scroll-spy-target="toSnakeCase"): a(href="#toSnakeCase")
      i.icon-chevron-right
      | toSnakeCase
    li(mac-scroll-spy-target="convertKeysToCamelCase"): a(href="#convertKeysToCamelCase")
      i.icon-chevron-right
